{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "dom"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noImplicitReturns": true,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": [
    "src",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "../../node_modules/@types/*"
  ]
}